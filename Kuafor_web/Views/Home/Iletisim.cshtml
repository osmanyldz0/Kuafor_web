@{
    ViewBag.Title = "İletişim";
    BerberDbContext db = new BerberDbContext();
    var admin = db.Kullanicis.Where(s => s.Silindi == false&&s.Yetki==true).ToList();
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #121212;
            color: #f1f1f1;
            margin: 0;
            padding: 0;
        }

        .container {
            padding: 50px 15px;
        }

        .section-title {
            font-size: 2.5em;
            color: #ff6600; /* Turuncu */
            text-align: center;
            margin-bottom: 30px;
            text-transform: uppercase;
            font-weight: 600;
        }

        .contact-info {
            display: flex;
            justify-content: space-between;
            margin-bottom: 50px;
        }

        .contact-info div {
            width: 30%;
            background-color: #1e1e1e;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            text-align: center;
        }

        .contact-info i {
            font-size: 2em;
            color: #ff6600;
            margin-bottom: 10px;
        }

        .contact-info h4 {
            font-size: 1.5em;
            color: #f1f1f1;
            margin-bottom: 10px;
        }

        .contact-info p {
            font-size: 1.2em;
            color: #ddd;
        }

        .contact-form {
            background-color: #1e1e1e;
            padding: 40px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

        .contact-form label {
            font-size: 1.2em;
            color: #f1f1f1;
            margin-bottom: 10px;
            display: block;
        }

        .contact-form input, .contact-form textarea {
            width: 100%;
            padding: 15px;
            margin-bottom: 20px;
            border-radius: 5px;
            border: 1px solid #ddd;
            background-color: #2c2c2c;
            color: #f1f1f1;
            font-size: 1.1em;
        }

        .contact-form button {
            background-color: #ff6600;
            color: #fff;
            border: none;
            padding: 15px 30px;
            font-size: 1.2em;
            cursor: pointer;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

        .contact-form button:hover {
            background-color: #e65c00;
        }

        .map-section {
            margin-top: 50px;
        }

        .map-section iframe {
            width: 100%;
            height: 400px;
            border: 0;
            border-radius: 10px;
        }

        .footer {
            background-color: #121212;
            padding: 20px;
            text-align: center;
            color: #ddd;
            margin-top: 50px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="section-title">İLETİŞİM</h1>

        <div class="contact-info">
         

            <div>
                <i class="fa fa-phone"></i>
                <h4>Telefon</h4>
                <ul>
                    @foreach (var adminler in admin)
                    {
                        <li>@adminler.Telefon</li>
                    }
                </ul>
            </div>







            <div>
                <i class="fa fa-envelope"></i>
                <h4>E-posta</h4>
                <ul>
                    @foreach (var adminler in admin)
                    {
                        <li>@adminler.Eposta</li>
                    }
                </ul>
            </div>


              
            <div>
                <i class="fa fa-map-marker"></i>
                <h4>Adres</h4>
                <p>Esentepe, Esentepe Kampüsü, Üniversite Cd., 54050 Serdivan/Sakarya</p>
            </div>
        </div>

       

        <div class="map-section">
            <h2 class="section-title">BİZİ HARİTADA BULUN</h2>
            <iframe src="https://www.google.com/maps/embed?pb=!1m17!1m12!1m3!1d3019.8062611165!2d29.418183075848077!3d40.81025097137896!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m2!1m1!2zNDDCsDQ4JzM2LjkiTiAyOcKwMjUnMTQuNyJF!5e0!3m2!1str!2str!4v1734186604424!5m2!1str!2str" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d48345.39263610787!2d29.893301424489266!3d40.77110667420238!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14cb4f66644bfb9d%3A0x82690ee7586b7eb9!2zxLB6bWl0LCBLb2NhZWxp!5e0!3m2!1str!2str!4v1734186717232!5m2!1str!2str" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3022.8797351372336!2d30.328146675844494!3d40.742671771388906!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14ccadf2977958d7%3A0xc7996fa884f94c03!2sSakarya%20%C3%9Cniversitesi!5e0!3m2!1str!2str!4v1733678357859!5m2!1str!2str" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
        </div>
    </div>

    <div class="footer">
        <p>&copy; 2024 Kuaför Salonumuz | Tüm Hakları Saklıdır</p>
    </div>

    <script src="https://kit.fontawesome.com/a076d05399.js"></script> <!-- FontAwesome için ikonlar -->
</body>
</html>
