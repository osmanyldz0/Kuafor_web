@model Kuafor_web.Models.Kullanici

@{
    ViewData["Title"] = "Bilgilerim";
    Layout = "~/Views/Shared/User.cshtml";
}

<style>

     
    body {
        background-color: #121212; 
        color: #fff;  
        font-family: Arial, sans-serif;
    }

     .form-container {
        background-color: #D3D3D3;  
        padding: 30px;
        border-radius: 8px;  
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); 
        max-width: 500px;  
        margin: 50px auto; 
    }

         .form-container label,
        .form-container input {
            width: 100%;
            margin-bottom: 15px;
        }

         
        .form-container label {
            color: #121212;  
            font-weight: bold;
        }

         
        .form-container input {
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px; 
            background-color: #f7f7f7;  
            font-size: 16px;
        }

             
            .form-container input[type="submit"] {
                background-color: #FF6600; 
                color: white;
                border: none;
                cursor: pointer;
                font-size: 16px;
            }

                .form-container input[type="submit"]:hover {
                    background-color: #e65c00;  
                }

     .text-danger {
        color: red;
    }

</style>
<h4>Bilgilerim</h4>
<hr />

<div class="row">
    <div class="col-md-12">
        <div class="form-container">
            <form asp-action="BilgilerimiGuncelle">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="KullaniciId" />

                <!-- Kullanıcı Adı Alanı -->
                <div class="form-group">
                    <label asp-for="KullaniciIsim" class="control-label" > </label>
                    <input asp-for="KullaniciIsim" class="form-control" required pattern="\S.*" title="Adınız boşluk karakterlerinden oluşamaz." />
                    <span asp-validation-for="KullaniciIsim" class="text-danger"></span>
                </div>

                <!-- E-posta Alanı -->
                <div class="form-group">
                    <label asp-for="Eposta" class="control-label"></label>
                    <input asp-for="Eposta" class="form-control" type="email" required />
                    <span asp-validation-for="Eposta" class="text-danger"></span>
                </div>

                <!-- Telefon Numarası Alanı -->
                <div class="form-group">
                    <label asp-for="Telefon" class="control-label"></label>
                    <input asp-for="Telefon" class="form-control" type="number" required />
                    <span asp-validation-for="Telefon" class="text-danger"></span>
                </div>

                <!-- Parola Alanı (Değiştirilmeyecekse boş bırakılabilir) -->
                <div class="form-group">
                    <label asp-for="Parola" class="control-label">Parola (*Değiştirilmeyecekse boş bırakın)</label>
                    <input asp-for="Parola" class="form-control"   />
                    <span asp-validation-for="Parola" class="text-danger"></span>
                </div>



                <!-- Güncelle Butonu -->
                <div class="form-group">
                    <input type="submit" value="Güncelle" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Geri Dönüş Bağlantısı -->
<div>
    <a asp-action="Index" asp-controller="User">Geri</a>
</div>





