@{
    ViewData["Title"] = "Yapay zeka ile saç modeli tavsiyesi alın";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #121212;
            color: #f1f1f1;
            margin: 0;
            padding: 0;
        }

        .container {
            padding: 50px 15px;
        }

        /* Başlık */
        .section-title {
            font-size: 2.5em;
            color: #FF6600; /* Turuncu */
            text-align: center;
            margin-bottom: 20px;
            text-transform: uppercase;
            font-weight: 600;
        }

        /* Fotoğraf Yükleme Kartı */
        .card {
            background-color: #1e1e1e;
            border: none;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            transition: transform 0.3s ease;
            margin-bottom: 20px;
            max-width: 400px; /* Kart boyutunu küçült */
            margin-left: auto;
            margin-right: auto;
        }

            .card:hover {
                transform: translateY(-5px);
            }

        .card-body {
            padding: 15px; /* İç boşlukları küçült */
        }

        .card-title {
            font-size: 1.5em; /* Başlık boyutunu küçült */
            color: #FF6600; /* Turuncu */
            margin-bottom: 15px;
        }

        .form-label {
            color: #f1f1f1;
        }

        .btn-primary {
            background-color: #FF6600;
            border-color: #FF6600;
            color: #fff;
            font-size: 1em; /* Buton yazı boyutunu küçült */
            padding: 8px 15px; /* Buton içindeki boşluğu küçült */
            border-radius: 5px;
            text-transform: uppercase;
            transition: background-color 0.3s ease;
        }

            .btn-primary:hover {
                background-color: #e65c00;
            }

        /* Yapay Zeka Önerisi Bölümü */
        .alert {
            background-color: #1e1e1e;
            color: #f1f1f1;
            border-radius: 5px;
            padding: 15px; /* Paddingi küçült */
            margin-top: 20px; /* Üstteki boşluğu küçült */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
        }

        .alert-info {
            background-color: #2a2a2a;
        }

        .alert-danger {
            background-color: #ff6666;
            color: #fff;
        }

        .text-center {
            text-align: center;
        }

        .footer {
            background-color: #121212;
            padding: 15px;
            text-align: center;
            color: #ddd;
            margin-top: 40px;
        }
    </style>
</head>
<body>

    <div class="container mt-5">

        <!-- Sayfa Başlığı -->
        <div class="section-title">
            <h1>YAPAY ZEKA İLE SAÇ MODELİ TAVSİYESİ ALIN </h1> <!-- Başlık burada görünür -->
        </div>

        <!-- Fotoğraf Yükleme Formu -->
        <div class="card shadow-sm mb-4">
            <div class="card-body">
                <h5 class="card-title">Fotoğraf Yükle</h5>
                <form asp-action="Tavsiye" method="post" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="photo" class="form-label">Fotoğraf Yükle:</label>
                        <input type="file" name="photo" id="photo" class="form-control" accept="image/*" required />
                    </div>
                    <button type="submit" class="btn btn-primary">Öneri Al</button>
                </form>
            </div>
        </div>

        <!-- Yapay Zeka Önerisi Bölümü -->
        @if (ViewBag.EditedImageUrl != null)
        {
            <div class="alert alert-info text-center">
                <h5>Saç Stiliniz İçin Yapay Zeka Önerisi:</h5>
                <p>@ViewBag.EditedImageUrl</p>
            </div>
        }
        else if (ViewBag.Error != null)
        {
            <div class="alert alert-danger text-center">
                <p>@ViewBag.Error</p>
            </div>
        }

    </div>

    <!-- Footer -->
    <div class="footer">
        <p>&copy; 2024 Berber Salonu | Tüm Hakları Saklıdır</p>
    </div>

</body>
</html>
