@model Kuafor_web.Models.Salon

@{
    BerberDbContext db = new BerberDbContext();
    var salon = db.Salons.ToList();
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Harita</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #121212;
            color: #f1f1f1;
            margin: 0;
            padding: 0;
        }

        .container {
            padding: 50px 15px;
        }

        .section-title {
            font-size: 2.5em;
            color: #ff6600; /* Turuncu */
            text-align: center;
            margin-bottom: 30px;
            text-transform: uppercase;
            font-weight: 600;
        }

        .map-section {
            margin-top: 50px;
        }

        .map-item {
            position: relative;
            margin-bottom: 50px;
        }

            /* Harita boyutlarını küçültüyoruz */
            .map-item iframe {
                width: 100%;
                height: 350px; /* Harita boyutunu 350px yapalım */
                border: 0;
                border-radius: 10px;
            }

            /* Fotoğraf için stil */
            .map-item img {
                width: 100%; /* Fotoğrafın genişliği ekranla uyumlu */
                height: 300px; /* Fotoğraf yüksekliği dikdörtgen olacak şekilde 300px ayarlandı */
                object-fit: cover; /* Fotoğrafın dikdörtgen şeklinde görünmesini sağlamak için */
                margin-top: 20px; /* Fotoğraf ile harita arasına mesafe */
                border-radius: 10px;
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); /* Hafif gölge efekti */
            }

        .footer {
            background-color: #121212;
            padding: 20px;
            text-align: center;
            color: #ddd;
            margin-top: 50px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="section-title">Bizi Haritada Bulun</h1>
        <div class="map-section">

            <!-- Harita 1 -->
            <div class="map-item">
                <!-- Harita -->
                <iframe src="https://www.google.com/maps/embed?pb=!1m17!1m12!1m3!1d3019.8062611165!2d29.418183075848077!3d40.81025097137896!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m2!1m1!2zNDDCsDQ4JzM2LjkiTiAyOcKwMjUnMTQuNyJF!5e0!3m2!1str!2str!4v1734186604424!5m2!1str!2str" width="600" height="350" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                <!-- Fotoğraf -->
                <img src="~/images/gebze.jpeg" alt="Dükkan Fotoğrafı 1" />
            </div>

            <!-- Harita 2 -->
            <div class="map-item">
                <!-- Harita -->
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d48345.39263610787!2d29.893301424489266!3d40.77110667420238!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14cb4f66644bfb9d%3A0x82690ee7586b7eb9!2zxLB6bWl0LCBLb2NhZWxp!5e0!3m2!1str!2str!4v1734186717232!5m2!1str!2str" width="600" height="350" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                <!-- Fotoğraf -->
                <img src="~/images/izmit.jpeg" alt="Dükkan Fotoğrafı 2" />
            </div>

            <!-- Harita 3 -->
            <div class="map-item">
                <!-- Harita -->
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3022.8797351372336!2d30.328146675844494!3d40.742671771388906!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14ccadf2977958d7%3A0xc7996fa884f94c03!2sSakarya%20%C3%9Cniversitesi!5e0!3m2!1str!2str!4v1733678357859!5m2!1str!2str" width="600" height="350" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                <!-- Fotoğraf -->
                <img src="~/images/sakarya.jpg" alt="Dükkan Fotoğrafı 3" />
            </div>

        </div>
    </div>

    <div class="footer">
        <p>&copy; 2024 Kuaför Salonumuz | Tüm Hakları Saklıdır</p>
    </div>
</body>
</html>
