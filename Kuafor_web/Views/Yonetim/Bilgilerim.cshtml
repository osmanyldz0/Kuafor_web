@model Kuafor_web.Models.Kullanici

@{
    ViewData["Title"] = "Bilgilerim";
    Layout = "~/Views/Shared/User.cshtml";  /* Layout sayfası */
}

<style>
    /* Sayfa Arka Planı ve Genel Stil */
    body {
        background-color: #121212; /* Siyah arka plan */
        color: #fff; /* Beyaz yazı rengi */
        font-family: Arial, sans-serif;
    }

    /* Formu Beyaz Zeminle Göster */
    .form-container {
        background-color: #f0f0f0; /* Açık gri arka plan */
        padding: 30px;
        border-radius: 8px; /* Yuvarlatılmış köşeler */
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); /* Hafif gölge */
        max-width: 600px; /* Maksimum genişlik */
        margin: 50px auto; /* Ortaya yerleşim */
    }

    /* Form Elemanları (label, input) */
    .form-group label {
        color: #121212; /* Siyah renk */
        font-weight: bold;
    }

    .form-control {
        width: 100%;
        padding: 12px;
        border: 1px solid #ccc;
        border-radius: 5px;
        background-color: #f7f7f7;
        font-size: 16px;
        margin-bottom: 20px;
    }

        .form-control:focus {
            border-color: #FF6600; /* Turuncu renk odaklanınca */
            background-color: #fff; /* Bembeyaz arka plan */
        }

    /* Submit Buton Stili */
    .form-container input[type="submit"] {
        background-color: #FF6600;
        color: white;
        border: none;
        cursor: pointer;
        padding: 10px 20px;
        font-size: 16px;
        width: 100%;
        border-radius: 5px;
    }

        .form-container input[type="submit"]:hover {
            background-color: #e65c00; /* Hoverda daha koyu turuncu */
        }

    /* Hata Mesajları */
    .text-danger {
        color: red;
        font-size: 14px;
    }

    /* Geri Dönüş Linki */
    .back-link {
        color: #1e90ff;
        text-decoration: none;
    }

        .back-link:hover {
            text-decoration: underline;
        }
</style>

<h4>Bilgilerim</h4>
<hr />

<!-- Form Başlangıcı -->
<div class="container">
    <div class="form-container">
        <form asp-action="BilgilerimiGuncelle">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="KullaniciId" />

            <!-- Kullanıcı Adı -->
            <div class="form-group">
                <label asp-for="KullaniciIsim" class="control-label">Adınız</label>
                <input asp-for="KullaniciIsim" class="form-control" />
                <span asp-validation-for="KullaniciIsim" class="text-danger"></span>
            </div>

            <!-- E-posta -->
            <div class="form-group">
                <label asp-for="Eposta" class="control-label">E-posta</label>
                <input asp-for="Eposta" class="form-control" />
                <span asp-validation-for="Eposta" class="text-danger"></span>
            </div>

            <!-- Telefon -->
            <div class="form-group">
                <label asp-for="Telefon" class="control-label">Telefon</label>
                <input asp-for="Telefon" class="form-control" />
                <span asp-validation-for="Telefon" class="text-danger"></span>
            </div>

            <!-- Parola -->
            <div class="form-group">
                <label asp-for="Parola" class="control-label">Parola (*Değiştirilmeyecekse boş bırakın)</label>
                <input asp-for="Parola" class="form-control" />
                <span asp-validation-for="Parola" class="text-danger"></span>
            </div>

            <!-- Güncelle Butonu -->
            <div class="form-group">
                <input type="submit" value="Güncelle" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<!-- Geri Bağlantısı -->
<div>
    <a asp-action="Index" class="back-link">Geri</a>
</div>
